alias du-cwd='du -mc -d 1 | sort -g'
alias reload='source ~/.zshrc'
alias gitf='git-flow'


alias b="bundle exec"
alias bs="bundle exec spring"
alias bss="bs server"
alias bst="bs status"

alias t="tmuximum"

alias tm="top -o mem"
alias tp="top -o cpu"

alias du-cwd="du --block-size=M --total --max-depth=1 --all | sort -g"
