class SidebarCell < Cell::Rails
  helper_method :stations

  def show
    @neighborhoods = Neighborhood.all
    @equipments = Equipment.list
    @usages = Usage.list
    @categori
    render
  end

  def stations(neighborhood)
    Station.published_listing_exists.joins(:neighborhood_station => :neighborhood).merge(Neighborhood.key_is(neighborhood.key)).distinct(:station_g_cd).pluck(:station_g_cd, :station_name)
  end
end
