require 'spec_helper'

describe Phone do
  it "does not allow duplicate phone numbers per contact" do
    contact = Contact.create( firstname: 'Joe', lastname: 'Tester', email: 'joetester@example.com' )
    home_phome = contact.phones.create( phone_type: 'home', phone: '785-555-1234' )
    mobile_phone = contact.phones.build( phone_type: 'mobile', phone: '785-555-1234' )

    contact = create(:contact)
    home_phone = create(:home_phone, contact: contact, phone: '789-555-1234')
    mobile_phone = build(:mobile_phone, contact: contact, phone: '789-555-1234')

    expect(mobile_phone).to have(1).errors_on(:phone)
  end

  it "allows two contacts to share a phone number" do
    create(:phone, phone: '785-555-1234')
    expect(build(:phone, phone: '785-555-1234')).to be_valid
  end
end
