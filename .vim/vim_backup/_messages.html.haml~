
%table.table.messages.messages-show
  %thead
    %tr
      %th.date 日時
      %th 内容
      %th.people 送信者
  %tbody
    - messages.each do |msg|
      %tr
        %td= datetime_str(msg.created_at)
        - if current_provider_user
          %td= link_to msg.body.truncate(50), provider_message_path( msg)
        - else
          %td= link_to msg.body.truncate(50), user_message_path(msg)
        %td.people= msg.sender.name
