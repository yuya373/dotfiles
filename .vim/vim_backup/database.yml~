default: &default
  adapter: mysql2
  encoding: utf8
  reconnect: false
  pool: 5
  username: root
  password: 

development:
  <<: *default
  database: spacee_<%=
    case `git symbolic-ref --short HEAD`.chomp!
      when 'master'  then 'master'
      when 'dev'     then 'master'
      when 'development' then 'master'
      when /release\/.*/ then 'release'
      when /hotfix\/.*/  then 'master'
      when /feature\/.*/ then 'dev'
      else 'dev'
    end
  %>


test:
  <<: *default
  database: spacee_test

production:
  <<: *default
  database: spacee_production

staging:
  <<: *default
  database: spacee_staging
