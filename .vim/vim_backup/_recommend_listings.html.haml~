- return '' unless listing.is_display?

- if keeped_query[:date]
  - cache [listing_path(listing) + '/recommend' + keeped_query[:date], listing] do
    .mod.mod-default.mod-round.sub-listing-mod.mod-shell
      .mod-header.mod-header-lighter
        %h4 空室のあるレンタルスペース
      .sub-listing-group
        - related_search(keeped_query, listing).limit(5).each do |listing|
          = render 'listings/sub_listing', listing: listing
- else
  - cache [listing_path(listing) + '/recommend', listing] do
    .mod.mod-default.mod-round.sub-listing-mod.mod-shell
      .mod-header.mod-header-lighter
        %h4 お近くのレンタルスペース
      .sub-listing-group
        - related_search(keeped_query, listing).limit(3).each do |listing|
          = render 'listings/sub_listing', listing: listing
