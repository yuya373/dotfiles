FactoryGirl.define do
  factory :receipt do
    :receiver   message
    is_read false
    deleated false

    factory :provider_user_receipt do
      association :receiver, factory: :provider_user
    end

    factory :user_receipt do
      association :receiver, factory: :user
    end
  end
end
