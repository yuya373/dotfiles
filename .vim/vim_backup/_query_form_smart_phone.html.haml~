.control-group
  %label.control-label 利用日
  .controls
    = date_field_tag :date, to_mobile_search_date(keeped_query[:date]),
    class: "for-picker input-block-level", placeholder: "利用日"
.control-group
  %label.control-label 利用時刻
  .controls
    - if keeped_query[:time].present?
      - time = Time.parse keeped_query[:time]
    - else
      - time = nil

    = time_field_tag :time, keeped_query[:time], step: "900"
    = select_time time, {minute_step: 15}, class: "select-time", style: "width: 55px;"
.control-group
  %label.control-label 利用時間
  .controls
    - listing ||= nil
    -  h = listing ? listing.min_booking_hours(keeped_query[:hours].to_i) : keeped_query[:hours]
    = select_tag :hours,
    options_for_select((1..12).map{|e| ["#{e}時間", e]}, h),
    class: "select-hours"
.control-group
  %label.control-label 人数
  .controls
    .input-append
      = my_number_field_tag :party, keeped_query[:party], class: "input-party"
      %span.add-on 人
