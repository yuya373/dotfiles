class Admin::UsersController < AdminApplicationController
  def index
    if params[:search_from].present? && params[:search_query].present?
      @users = User.where(params[:search_from] => params[:search_query])
      @users = User.where("? like ?", params[:search_from], "%#{params[:search_query]}")
    end
    flash[:notice] = "該当するユーザーは見つかりませんでした" if @users.blank?
    @users ||= []
  end

  def become
    user = User.find params[:id]
    sign_in :user, user
    redirect_to user_root_url
  end

  def show
    @user = User.find params[:id]
  end
end
