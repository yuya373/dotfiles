- return '' if current_user.blank?
%script
  - unless Rails.env.production?
    mixpanel.disable();
  - if flash[:created].present? && current_user.new_user?
    mixpanel.alias("#{current_user.id}");
    mixpanel.track("signup");
  - elsif flash[:session_created].present? && current_user.after_sign_in?
    mixpanel.identify("#{current_user.id}");
    mixpanel.track("signin");

  - if current_user.after_sign_in?
    mixpanel.people.set({
    "$email": "#{current_user.email}",
    "$created": "#{current_user.created_at}",
    "$last_login": "#{current_user.current_sign_in_at}",
    "$name": "#{current_user.name}",
    "sign_in_count": "#{current_user.sign_in_count}",
    "credits": 0});
