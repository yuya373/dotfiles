class Provider::RoomCalendarSetupsController < ProviderApplicationController
  include ProviderScheduler
  include ProvidersListing
  before_action :set_listing
  layout "provider/after_sign_in"

  def new
    @listing = current_provider.listings.price_plan_eager_load.
      find params[:listing_id]
    @app_data = {}
    @app_props = scheduler_app_props(@listing)
  end

  def create
    datasource = {
      :result   => "success",
      :messages => [],
      :nextUri  => finish_provider_listing_room_calendar_setup_path(@listing)
    }
    render json: datasource
  end

  def finish
  end
end
