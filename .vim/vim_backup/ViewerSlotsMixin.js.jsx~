/** @jsx React.DOM */

define([
    "react",
    ], function(React, SchedulerBlockMixin) {
  return {
    rootClassName      : "scheduler-event-canvas",
    focusBlockClassName: "block-focus",
    getInitialState: function() {
      return {
        days: []
      };
    },
    render: function() {
    console.log(this);
      return (
        <div className={this.rootClassName} style={this.makeRootStyle()}>
          {this.renderContent()}
        </div>
      );
    },
    /*
     * Calendar Period Handler
     */
    weekDidChange: function(days) {
      this.adjustScrollTop(this.props.defaultTime);
      this.$canvas.find(".slot-block").remove();
      this.placeBlocks();
    },
    dayDidChange: function(days) {
      this.adjustScrollTop(this.props.defaultTime);
      this.$canvas.find(".slot-block").remove();
      this.placeBlocks();
    }
  };
});
