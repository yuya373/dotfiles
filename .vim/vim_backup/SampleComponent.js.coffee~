define(["core/component"], (component) ->
  component.extend(
    {
      install: ->
        _.bindAll(@, "sample")

        sample = @.select("sampleComponent").prevObject
        # $('#sampleComponent').bind("click", @.sample)

        sample.bind("click", @.sample)
        sample.html("Click me")

        console.log "sampleComponent - installed"
        return
      sample:  ->
        @.select("sampleComponent").prevObject.html("Hello")
        console.log "SampleComponent#sample"
        return
    }
  )
)
