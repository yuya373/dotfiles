class MessagesNotifyMailer < ActionMailer::Base
  layout "mail"
  default from: APP_CONFIG['mail']['info']

  def send_email(message, receiver)
    @message = message
    @sender = message.sender
    @receiver = receiver
    bcc = APP_CONFIG["mail"]["info"]
    subject = "[Spacee]新着メッセージのお知らせ"

    mail subject: subject, to: @receiver.email, bcc: bcc, reply_to: bcc
  end
end
