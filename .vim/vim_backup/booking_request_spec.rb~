require 'spec_helper'

describe BookingRequest do
  it do
    should have_one :booking_request_conversation
  end
  it do
  end
  let(:listing){ create :d_listing }
  describe ".acceptable" do
    subject {
      build :booking_request, start_at: Time.now
    }
    it "return false when empty listing" do
      subject.acceptable?(listing).should be_false
    end
  end
end
