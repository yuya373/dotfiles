class Admin::ProvidersController < AdminApplicationController
  before_action :set_provider, only: [:show, :edit, :update, :destroy]

  def index
    @providers = Provider.all.includes(:provider_users).page params[:page]
  end

  def show
    @provider_users = @provider.provider_users
  end

  def new
    @provider = Provider.new
  end

  def edit
  end

  def become
    provider = Provider.find params[:id]
    sign_in :provider_user, provider.provider_users.first
    redirect_to provider_root_url
  end

  def create
    @provider = Provider.new(provider_params)

    respond_to do |format|
      if @provider.save
        format.html {
          redirect_to admin_provider_url(@provider), notice: 'successfully created.'
        }
      else
        format.html { render action: 'new' }
      end
    end
  end

  def update
    respond_to do |format|
      if @provider.update(provider_params)
        format.html {
          redirect_to admin_provider_url(@provider), notice: 'successfully updated.'
        }
      else
        format.html { render action: 'edit' }
      end
    end
  end

  def destroy
    @provider.destroy
    respond_to do |format|
      format.html { redirect_to admin_providers_url }
    end
  end

  private

  def set_provider
    @provider = Provider.find params[:id]
  end

  def provider_params
    params[:provider].permit(:name, :address, :tel, :homepage, :bank_account)
  end
end
