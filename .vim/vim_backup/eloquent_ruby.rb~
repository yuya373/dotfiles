def echo_all(*args)
  args.each{ |item| puts item }
end

echo_all( %w(lion tiger lepard) )
echo_all('dog')

def echo_at_least_two(first_arg, *second_arg, third_arg)
  # puts "this is first #{first_arg}"
  # second_arg.each{ |item| puts "this is second #{item}" }
  # puts "this is third #{third_arg}"
  #
  p second_arg
end

echo_at_least_two('lion', 'tiger', 'leopard', 'dog', 'cat', 'cow')

class Document

  attr_accessor :author, :title

  def initialize(author, title)
    @author = author
    @title = title
  end

  def add_author(*names)
    @author += ",#{ names.join(',') }"
  end
end

doc = Document.new('yuya', 'amazon')

doc.add_author('minami', 'jjjjjj')

p doc


def load_font(font={})
  name = font[:name]
  size = font[:size]

  puts "font name: #{name}, font size: #{size}"
end

load_font( name: "Times", size: "13" )
