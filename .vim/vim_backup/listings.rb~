FactoryGirl.define do
  factory :listing do
    factory :d_listing do
      # provider_id 1
      category_id 1
      title "アイデアマン"
      thumb { dummy_img }
      capacity 10
      square 30
      desc "あああああ あああああ"
      price 100
      email "dev@ideaman.com"
      tel "03-999-0099"
      is_display true
      is_approved true
      min_booking_minutes 60
      after :create do |e, evaluator|
        create :listing_setup, listing: e
      end
    end
  end
end
