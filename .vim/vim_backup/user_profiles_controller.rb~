class User::UserProfilesController < UserApplicationController

  def new
    @user_profile = UserProfile.new
  end

  def edit
    @user_profile = current_user.user_profile
  end

  def create
    @user_profile = PreBookingBill.new(user_profile_params)
    @user_profile.user_id = current_user.id

    if @user_profile.save
      redirect_to user_user_profiles_url
    else
      render :new
    end
  end

  def update
    @user_profile = current_user.user_profile
    @user_profile.update(user_profile_params)
    if @user_profile.save
      redirect_to user_user_profiles_url
    else
      render :edit
    end
  end

  def show
    @user_profile = current_user.user_profile
  end

  private

  def user_profile_params
    params.require(:user_profile).permit(:name, :company, :address)
  end
end
