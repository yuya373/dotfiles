class HowItWorksController < ApplicationController
  def provider
  end

  def provider_faq
  end

  def provider_fees
  end

  def provider_support
    @pre_provider_contact = PreProviderContact.new
  end

  def provider_support_success
  end

  def user
  end

  def user_faq
  end

  def contact
    @pre_provider_contact = PreProviderContact.new(provider_contact_params)
    @pre_provider_contact.save!
    PreProviderContactMailer.delay.contact(@pre_provider_contact.id)
    redirect_to how_it_works_provider_support_success_url(id: @pre_provider_contact.id)
  rescue ActiveRecord::RecordInvalid => e
    logger.error e
    render :provider_support
  end

  private

  def provider_contact_params
    params.require(:pre_provider_contact).
      permit(:email, :company, :person,  :tel, :content)
  end
end
