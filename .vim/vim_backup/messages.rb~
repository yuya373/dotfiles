FactoryGirl.define do
  factory :message do
    conversation
    subject 'subject'
    body 'testtest'

    factory :provider_user_message do
      association :sender, factory: :provider_user
    end

    factory :user_message do
      association :sender, factory: :user
    end
  end
end
