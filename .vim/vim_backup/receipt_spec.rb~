require 'spec_helper'

describe Receipt do
  describe "#is_unread?" do
    it do
      read_receipt = create(:receipt, is_read: true)
      expect(read_receipt.is_unread?).to be_false
    end

    it do
      unread_receipt = create(:receipt, is_read: false)
      expect(unread_receipt.is_unread?).to be_true
    end
  end

  describe "#mark_as_read" do
    it do
      unread_receipt = create(:receipt, is_read: false)
      # unread_receipt.mark_as_read
      # expect(unread_receipt.is_read).to be_true
      expect{ unread_receipt.mark_as_read.is_read }.to be_true
    end
  end

  describe ""
end
