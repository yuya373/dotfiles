RSpec::Matchers.define :make_hidden do |expected|
  match do |actual|
    # expect(@contact.reload.hidden?).to be_true
    expect(actual.reload.expected?).to be_true
  end

  failure_message_for_should do |actual|
    "#{actual}##{expected}? is false"
  end

  failure_message_for_should_not do |actual|
    "#{actual}##{expected}? is false"
    "makes the contact hidden"
  end

  description do
    "makes #{actual} #{expected}"
  end
end
