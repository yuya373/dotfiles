String.prototype.zenToHan = function zenToHan (){
  var str = ''
  function toHan(match){
    str += String.fromCharCode(match.charCodeAt(0) - 0xFEE0)
  }
  if (this.match(/[0-9]/g)) {
    return this.toString();
  } else {
    this.replace(/[０-９]/g, toHan)
    return str
  }
};

var zip = document.getElementById('zip').value.zenToHan();
var code = document.getElementById('code').value.zenToHan();


AjaxZip3.zip2addr(zip, code, pre, city, lot);
