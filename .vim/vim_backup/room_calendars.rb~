# Read about factories at https://github.com/thoughtbot/factory_girl

FactoryGirl.define do
  sequence :room_calendar_id do |n|
    n
  end

  factory :room_calendar do
    id { FactoryGirl.generate(:room_calendar_id) }
    factory :d_room_calendar do
      listing_id 1
      price_plan_id 1
      open_at "09:00"
      close_at "19:00"
      is_open true
      day Date.today
      #after(:build) do |m|
        #m.price_plan_id = m.listing.price_plans.first.id
      #end
    end
  end
end
