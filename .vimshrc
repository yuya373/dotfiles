alias rails="bin/spring rails"
alias rake="bin/spring rake"
alias b="bundle exec"
alias bs="bin/spring"
alias anno="bundle exec annotate -p before -i"
alias db:drop="b rake db:drop db:shards:drop && b rake db:drop db:shards:drop RAILS_ENV=test"
alias db:create="b rake db:create db:shards:create && b rake db:create db:shards:create RAILS_ENV=test"
alias db:reset="db:drop && db:create"
alias apply-ridgepole="bundle exec rake 'db:ridgepole:apply[test]' RAILS_ENV=test && bundle exec rake 'db:ridgepole:apply[development]'"
