[core]
  editor = vim
  pager = less
  quotepath = false
[include]
  path = ~/.gitconfig_local
[alias]
  co = checkout
  br = branch
  cm = commit
  st = status
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
  mt = mergetool
  ap = add -p
  rb = rebase
  rbc = rebase --continue
  rba = rebase --abort
  rs = reset --soft
  p = push
  pf = push -f
  puu = push -u
  pr = ~/dotfiles/pullreq.sh
[push]
  default = simple
[mergetool]
  keepBackup = false
[merge]
  tool = vimdiff
