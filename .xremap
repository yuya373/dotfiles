window class_not: ['urxvt', 'emacs'] do
  remap 'C-b', to: 'Left'
  remap 'C-f', to: 'Right'
  remap 'C-p', to: 'Up'
  remap 'C-n', to: 'Down'

  # remap 'M-b', to: 'Ctrl-Left'
  # remap 'M-f', to: 'Ctrl-Right'

  remap 'C-a', to: 'Home'
  remap 'C-e', to: 'End'

  remap 'C-k', to: ['Shift-End', 'Ctrl-x']

  remap 'C-d', to: 'Delete'
  # remap 'M-d', to: 'Ctrl-Delete'

  remap 'C-bracketleft', to: 'Escape'
  remap 'C-h', to: 'BackSpace'
  remap 'C-m', to: 'Return'
end
